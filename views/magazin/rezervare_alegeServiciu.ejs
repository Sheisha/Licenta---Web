<%- include('../includes/inceput.ejs') %>
    <link rel="stylesheet" href="/css/serviciu.css">
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="/css/forms.css">


</head>

<body>
    <%- include('../includes/navigare.ejs') %>

    <main>
        
        <% if (servicii.length > 0) { %>
            <div class="grid row">
                <% for (let serviciu of servicii) { %>
                    <article class="card product-item col-lg-4">
                        <header class="card__header">
                            <h1 class="product__title">
                                <%= serviciu.tipVehicul %>
                            </h1>
                        </header>
                        <div class="card__content">
                            
                            <h2 class="product__description">
                                <%= serviciu.tipServiciu %>
                            </h2>
                            <h2 class="product__price">RON
                                <%= serviciu.pret %>
                            </h2>

                        </div>
                        <div class="card__actions">

                            <% if (isAuthenticated) { %>
                                <%- include('../includes/adaugaInCos.ejs', {serviciu: serviciu}) %>
                            <% } %>
                            <!-- <input type="hidden" value="<%= serviciu._id %>" name="serviciuId">
                            <button class="btn" type="button" onclick="adaugaServiciu(this)">Adauga in cos</button> -->
 
                        </div>
                    </article>
                    <% } %>
            </div>
            <% } else { %>
                <h1>Nu exista servicii pentru aceasta categorie de masini.</h1>
                <% } %>

    </main>
<%- include('../includes/sfarsit.ejs') %>