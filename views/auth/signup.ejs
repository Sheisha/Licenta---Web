<%- include('../includes/inceput.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigare.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/signup" method="POST" novalidate>
            <div class="form-control">
                <label for="username">Numele dv.</label>
                <input
                    class="<%= validationErrors.find(e => e.param === 'username') ? 'invalid' : '' %>"
                    name="username"
                    id="username" 
                    value="<%= oldInput.username %>">
            </div>
            <div class="form-control">
                <label for="email">E-Mail</label>

                <input 
                    class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                    type="email" 
                    name="email" 
                    id="email" 
                    value="<%= oldInput.email %>">
            </div>
            <div class="form-control">
                <label for="numarVehicul">Numarul vehiculului dv.</label>

                <input 
                    name="numarVehicul" 
                    id="numarVehicul" 
                    value="<%= oldInput.numarVehicul %>">
            </div>
            <div class="form-control">
                <label for="telefon">Nr Telefon</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'telefon') ? 'invalid' : '' %>"
                    type="phone" 
                    name="telefon" 
                    id="telefon" 
                    value="<%= oldInput.telefon %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                    type="password" 
                    name="password" 
                    id="password" 
                    value="<%= oldInput.password %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>"
                    type="password" 
                    name="confirmPassword" 
                    id="confirmPassword" 
                    value="<%= oldInput.confirmPassword %>">
            </div>
            

            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/sfarsit.ejs') %>